@model IEnumerable<JobPortal.Data.Entities.AppRole>

@{
    ViewData["Title"] = "Danh sách vai trò";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-description">
                        <a class="btn btn-primary" asp-action="CreateRole">Thêm vai trò mới</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-bordered" style="text-align: center">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="EditRole" asp-route-Id="@item.Id">Chỉnh sửa</a>
                                            <button class="btn btn-danger" type="button" onclick="onDelete('@item.Id')">Xóa</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    input.btn.btn-danger {
        position: absolute;
        right: 25px;
        top: 25px;
    }

    th {
        font-weight: 700 !important
    }
</style>

<script>
    function onDelete(id) {
        Swal.fire({
            title: 'Xóa vai trò này?',
            text: "Bạn có chắc chắn muốn xóa vai trò này không?",
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Xóa'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/admin/auth/delete-role/' + id;
                Swal.fire(
                    'Đã xóa!',
                    '',
                    'success'
                );
            }
        });
    }
</script>
