@model JobPortal.Data.ViewModel.CreateRoleViewModel

@{
    ViewData["Title"] = "Thêm vai trò mới";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center">FORM TẠO VAI TRÒ</h4>
                    <div class="row">
                        <div class="col-md-8 mx-auto">
                            <form asp-action="CreateRole" method="post" id="form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="RoleName" class="control-label"></label><span class="text-danger">*</span>
                                    <input asp-for="RoleName" class="form-control" />
                                    <span asp-validation-for="RoleName" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group">
                                    <label asp-for="RoleDescription" class="control-label"></label><span class="text-danger">*</span>
                                    <input asp-for="RoleDescription" class="form-control" />
                                    <span asp-validation-for="RoleDescription" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group text-center" style="margin-bottom: 15px">
                                    <input style="background-color:forestgreen" type="button" onclick="onCreate()" value="Tạo mới" class="btn btn-primary" />
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="text-center">
                                    <a style="background-color:gray" class="btn btn-primary" href="/admin/auth/list-roles">Quay lại danh sách</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function onCreate() {
            Swal.fire({
                title: 'Thêm vai trò mới?',
                text: "Bạn có chắc chắn muốn thêm vai trò mới không?",
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Xác nhận'
            }).then((result) => {
                if (result.isConfirmed) {
                    $("#form").submit();
                    Swal.fire(
                        'Thành công!',
                        '',
                        'success'
                    )
                }
            })
        }
    </script>
}
