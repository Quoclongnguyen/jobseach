<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <!-- Tổng quan -->
        <div @*class="col-md-6 col-lg-4 order-2 mb-4"*@>
            <div class="card h-100">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h3>TỔNG QUAN</h3>
                </div>

                <div class="card-body">
                    <ul class="p-0 m-0">
                        @*<li class="d-flex mb-4 pb-1">
                        <div class="avatar flex-shrink-0 me-3">
                        <a asp-action="ListEmployer" asp-controller="Home">
                        <!-- Thêm liên kết chuyển trang -->
                        <img src="~/assets/admin/assets/img/icons/unicons/employer-icon.png" alt="Nhà tuyển dụng" />
                        </a>
                        </div>
                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                        <h5 class="mb-0">Số lượng nhà tuyển dụng</h5>
                        </div>
                        <div class="user-progress d-flex align-items-center gap-1">
                        <h6 class="mb-0">+82.6</h6>
                        <span class="text-muted">Tài khoản</span>
                        </div>
                        </div>
                        </li>*@

                        <li class="d-flex mb-4 pb-1" onclick="window.location.href = '@Url.Action("ListEmployer", "Home")'">
                            <div class="avatar flex-shrink-0 me-3">
                                <img src="~/assets/admin/assets/img/icons/unicons/employer-icon.png" alt="Nhà tuyển dụng" />
                            </div>
                            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                <div class="me-2">
                                    @*<small class="text-muted d-block mb-1">Paypal</small>*@
                                    <h5 class="mb-0">Tất cả nhà tuyển dụng</h5>
                                </div>
                                <div class="user-progress d-flex align-items-center gap-1">
                                    <h6 class="mb-0">@ViewBag.CountEmployer</h6>
                                    <span class="text-muted">Tài khoản</span>
                                </div>
                            </div>
                        </li>

                        <hr />

                        <li class="d-flex mb-4 pb-1" onclick="window.location.href = '@Url.Action("ListUser", "Home")'">
                            <div class="avatar flex-shrink-0 me-3">
                                <img src="~/assets/admin/assets/img/icons/unicons/user-icon.png" alt="Người dùng" style="object-fit:cover" class="rounded" />
                            </div>
                            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                <div class="me-2">
                                    @*<small class="text-muted d-block mb-1">Paypal</small>*@
                                    <h5 class="mb-0">Tất cả người dùng</h5>
                                </div>
                                <div class="user-progress d-flex align-items-center gap-1">
                                    <h6 class="mb-0">@ViewBag.CountUser</h6>
                                    <span class="text-muted">Tài khoản</span>
                                </div>
                            </div>
                        </li>

                        <hr />

                        <li class="d-flex mb-4 pb-1">
                            <div class="avatar flex-shrink-0 me-3">
                                <img src="~/assets/admin/assets/img/icons/unicons/job-icon.png" alt="Công việc" style="object-fit:cover" class="rounded" />
                            </div>
                            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                <div class="me-2">
                                    @*<small class="text-muted d-block mb-1">Paypal</small>*@
                                    <h5 class="mb-0">Tổng số công việc</h5>
                                </div>
                                <div class="user-progress d-flex align-items-center gap-1">
                                    <h6 class="mb-0">@ViewBag.CountJob</h6>
                                    <span class="text-muted">Công việc</span>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--/ Tổng quan -->
    </div>
</div>
<!-- / Nội dung -->
