@model JobPortal.Data.ViewModel.LoginViewModel

@{
    Layout = "~/Areas/Employer/Views/Shared/_EmployerLoginLayout.cshtml";
}

<!-- /Logo -->
<h4 class="mb-2">Đăng nhập cho Nhà tuyển dụng! 👋</h4>
<p class="mb-4">Vui lòng đăng nhập vào tài khoản của bạn để bắt đầu hành trình</p>

<form asp-action="Login" asp-controller="Account" id="account" class="mb-3" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label><span class="text-danger">*</span>
        <input asp-for="Email"
               type="text"
               class="form-control"
               autocomplete="username"
               aria-required="true"
               placeholder="Nhập email của bạn"
               autofocus />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3 form-password-toggle">
        <label asp-for="Password" class="form-label">Mật khẩu</label><span class="text-danger">*</span>
        <div class="input-group input-group-merge">
            <input asp-for="Password"
                   type="password"
                   class="form-control"
                   autocomplete="new-password"
                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                   aria-required="true" />
            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
        </div>
    </div>
    <div class="mb-3">
        <button id="login-submit" class="btn btn-primary d-grid w-100" type="submit">Đăng nhập</button>
    </div>
</form>

<p class="text-center">
    <span>Bạn muốn trở thành nhà tuyển dụng?</span>
    <a href="/register-employer/register">
        <span>Đăng ký ngay</span>
    </a>
</p>

<a href="/login" class="btn btn-primary d-grid w-100" style="position:center">Đăng nhập cho Người dùng</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
